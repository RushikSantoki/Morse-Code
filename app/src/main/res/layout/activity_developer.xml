<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground"
    android:orientation="vertical">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_16dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_morse" />

            <TextView
                android:id="@+id/dev_tv_appinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/padding_16dp"
                android:text="AppName(v0.0)"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardRadius_8dp"
                android:background="@drawable/background_textview_developer"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingTop="@dimen/padding_5dp"
                android:paddingRight="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_5dp"
                android:text="Meet Our Team"
                android:textColor="@color/white"
                android:textSize="@dimen/name_18sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardRadius_8dp"
                android:layout_marginRight="@dimen/cardRadius_8dp"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/padding_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_webview_developer"
                    android:orientation="vertical"
                    android:padding="@dimen/cardRadius_8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:fontFamily="sans-erif"
                            android:text="Developed by"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:fontFamily="sans-serif"
                            android:text=":"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="sans-serif-normal"
                            android:paddingLeft="@dimen/margin_4dp"
                            android:text="@string/developerName" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:fontFamily="sans-serif"
                            android:text="Mentored by"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:fontFamily="sans-serif"
                            android:text=":"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="sans-serif-normal"
                            android:paddingLeft="4dp"
                            android:text="Prof. Nilesh Gambhava, Computer Engineering Department" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:fontFamily="sans-serif"
                            android:text="Explored by"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:fontFamily="sans-serif"
                            android:text=":"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="sans-serif-normal"
                            android:paddingLeft="@dimen/margin_4dp"
                            android:text="ASWDC, Computer Engineering Department" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:fontFamily="sans-serif"
                            android:text="Eulogized by"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:fontFamily="sans-serif"
                            android:text=":"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:fontFamily="sans-serif-normal"
                            android:paddingLeft="@dimen/margin_4dp"
                            android:text="Darshan Institute of Engineering &amp; Technology, Rajkot, Gujarat - INDIA" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardRadius_8dp"
                android:layout_marginTop="@dimen/padding_10dp"
                android:background="@drawable/background_textview_developer"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingTop="@dimen/padding_5dp"
                android:paddingRight="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_5dp"
                android:text="About ASWDC"
                android:textColor="@color/white"
                android:textSize="@dimen/name_18sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardRadius_8dp"
                android:layout_marginRight="@dimen/cardRadius_8dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/padding_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_webview_developer"
                    android:orientation="vertical"
                    android:padding="@dimen/cardRadius_8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/aswdc_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/layout_50dp"
                            android:layout_weight="2"
                            android:paddingRight="@dimen/padding_10dp"
                            android:src="@drawable/logo_aswdc" />

                        <ImageView
                            android:id="@+id/darshan_logo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/layout_50dp"
                            android:layout_weight="1"
                            android:src="@drawable/logo_diet" />

                    </LinearLayout>

                    <WebView
                        android:id="@+id/developer_wv_detail"
                        style="@style/mediumTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_5dp"
                        android:textColor="@color/black" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardRadius_8dp"
                android:layout_marginTop="@dimen/padding_10dp"
                android:background="@drawable/background_textview_developer"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingTop="@dimen/padding_5dp"
                android:paddingRight="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_5dp"
                android:text="Contact Us"
                android:textColor="@color/white"
                android:textSize="@dimen/name_18sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardRadius_8dp"
                android:layout_marginRight="@dimen/cardRadius_8dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/padding_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_webview_developer"
                    android:orientation="vertical"
                    android:padding="@dimen/cardRadius_8dp">

                    <LinearLayout
                        android:id="@+id/dev_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_4dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingBottom="@dimen/margin_4dp">

                        <TextView
                            android:id="@+id/dev_ic_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_10dp"
                            android:text="\uf0e0"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="aswdc@darshan.ac.in" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dev_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_4dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingBottom="@dimen/margin_4dp">

                        <TextView
                            android:id="@+id/dev_ic_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_10dp"
                            android:text="\uf095"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91-9727747317" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/dev_web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_4dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingBottom="@dimen/margin_4dp">

                        <TextView
                            android:id="@+id/dev_ic_web"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_10dp"
                            android:text="\uf0ac"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="www.darshan.ac.in" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardRadius_8dp"
                android:layout_marginTop="@dimen/cardRadius_8dp"
                android:layout_marginRight="@dimen/cardRadius_8dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/padding_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_webview_developera"
                    android:orientation="vertical"
                    android:padding="@dimen/cardRadius_8dp">

                    <LinearLayout
                        android:id="@+id/dev_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_4dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingBottom="@dimen/margin_4dp">

                        <TextView
                            android:id="@+id/dev_ic_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_10dp"
                            android:text="\uf1e0"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share app" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dev_more_apps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_4dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingBottom="@dimen/margin_4dp">

                        <TextView
                            android:id="@+id/dev_ic_app"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_10dp"
                            android:text="\uf17b"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More Apps" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dev_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_4dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingBottom="@dimen/margin_4dp">

                        <TextView
                            android:id="@+id/dev_ic_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_10dp"
                            android:text="\uf006"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate Us" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dev_like_fb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_4dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingBottom="@dimen/margin_4dp">

                        <TextView
                            android:id="@+id/dev_ic_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_10dp"
                            android:text="\uf164"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Like us on Facebook" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dev_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_4dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingBottom="@dimen/margin_4dp">

                        <TextView
                            android:id="@+id/dev_ic_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding_10dp"
                            android:text="\uf021"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check for Updates" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/dev_tv_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/padding_10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/name_12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Rights Reserved - "
                    android:textColor="@color/black"
                    android:textSize="@dimen/name_12sp" />

                <TextView
                    android:id="@+id/dev_tv_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textColor="@color/custom_extra"
                    android:textSize="@dimen/name_12sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
